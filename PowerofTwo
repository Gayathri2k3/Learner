class Solution {
    public static boolean isPowerofTwo(int n) {
        if(n<=0){
            return false;
        }
        else{
        return (n&(n-1))==0;
        }
    }
    public static void main(String args[]){
        int n=8;
        Solution sol=new Solution();
        System.out.println(sol.isPowerofTwo(n));
    }
}
